<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/telacadastro"
    android:orientation="vertical"
    android:gravity="center"
    android:baselineAligned="false"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center"
        android:textColor="#000"
        android:text=" SDO - Cadastro do Cliente "
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.12" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12"
        android:gravity="center"
        android:text=" INFORMAÇÕES CADASTRAIS"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editNome1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:layout_weight="0.04" />


    <EditText
        android:id="@+id/editCPF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:ems="10"
        android:hint="CPF"
        android:textSize="20dp"
        android:inputType="number" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:text="CONTATO"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTelefone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefone"
        android:textSize="20dp"
        android:inputType="phone"
        android:layout_weight="0.03" />

    <EditText
        android:id="@+id/editEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-Mail"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:layout_weight="0.03"/>

    <EditText
        android:id="@+id/editWhatsapp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:ems="10"
        android:hint="WhatsApp"
        android:textSize="20dp"
        android:inputType="number" />

    <EditText
        android:id="@+id/editRedesocial1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Rede Social"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:layout_weight="0.03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="Cadastrar" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="Cancelar" />


    </LinearLayout>
</LinearLayout>